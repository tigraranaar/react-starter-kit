{
	"editor.codeActionsOnSave": [
		"source.addMissingImports", // VSCode
		"source.formatDocument", // Extension: Format Code Action
		"source.fixAll.eslint", // Extension: ESLint
		"source.fixAll.stylelint" // Extension: StyleLint
	],

	// "eslint.format.enable": false, // Do not mess with this!!,
	// "editor.defaultFormatter": "dbaeumer.vscode-eslint",

	"editor.defaultFormatter": "esbenp.prettier-vscode", // Enabled via codeActionsOnSa{ve (known order)
	"eslint.format.enable": true,
	"eslint.packageManager": "yarn",
	"eslint.run": "onSave",
	"editor.formatOnSave": true
}
